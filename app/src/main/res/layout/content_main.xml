                    android:layout_toEndOf="@id/tokenST"
                    android:layout_toRightOf="@id/tokenST"
                    android:gravity="end"
                    android:singleLine="true"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/validityT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tokenST"
                    android:layout_marginTop="10dp"
