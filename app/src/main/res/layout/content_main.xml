                    android:layout_toRightOf="@id/pingT"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="end"
                    android:singleLine="true"
                    android:text="@string/loading"
                    android:textSize="16sp" />
            </RelativeLayout>

